{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "build",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node"
    },
    "include": ["./models/**.ts"],
    "exclude": ["./node_modules"]
  }